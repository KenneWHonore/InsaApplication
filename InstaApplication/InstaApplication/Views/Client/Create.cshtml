@model InstaApplication.Models.Client

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Intégration du CSS directement dans la vue -->
    <style>
        /* Général */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f7f6;
            color: #333;
            margin: 0;
            padding: 0;
        }

        /* Titre principal */
        h3 {
            text-align: center;
            color: #2c3e50;
            font-size: 2.5rem;
            margin-top: 30px;
            font-weight: bold;
        }

        /* Formulaire */
        .form-container {
            display: flex;
            justify-content: center;
            margin-top: 30px; /* Marge pour éviter de coller au titre */
        }

        form {
            width: 100%;
            max-width: 500px; /* Limite la largeur du formulaire */
            background-color: #ffffff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: 600;
            color: #34495e;
            display: block;
            margin-bottom: 5px;
        }

        input.form-control {
            width: 100%;
            padding: 10px;
            font-size: 1rem;
            border: 2px solid #ccc;
            border-radius: 5px;
            background-color: #f9f9f9;
            transition: border-color 0.3s;
        }

            input.form-control:focus {
                border-color: #3498db;
                outline: none;
                background-color: #ffffff;
            }

        /* Bouton */
        input[type="submit"] {
            background-color: #3498db;
            color: #fff;
            padding: 12px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1.1rem;
            transition: background-color 0.3s;
        }

            input[type="submit"]:hover {
                background-color: #2980b9;
            }

        /* Erreurs de validation */
        .text-danger {
            color: #e74c3c;
        }

        /* Liens */
        a {
            color: black;
            text-decoration: none;
            font-weight: bold;
            display: inline-block;
            margin-top: 10px; /* Moins de marge pour rapprocher le lien */
            text-align: center;
            transition: color 0.3s;
        }

            a:hover {
                color: #2980b9;
            }

        /* Ajout de la classe pour les boutons sur la même ligne */
        .d-flex {
            display: flex;
        }

        .justify-content-between {
            justify-content: space-between;
            align-items: center;
        }
    </style>
</head>
<body>

    <h3>Ajouter un client</h3>
    
    <!-- Formulaire centré horizontalement -->
    <div class="form-container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Entrez le nom" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prenom" class="control-label"></label>
                <input asp-for="Prenom" class="form-control" placeholder="Entrez le prénom" />
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="age" class="control-label"></label>
                <input asp-for="age" class="form-control" placeholder="Entrez l'âge" />
                <span asp-validation-for="age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="adresse" class="control-label"></label>
                <input asp-for="adresse" class="form-control" placeholder="Entrez l'adresse" />
                <span asp-validation-for="adresse" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-between">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</body>
</html>
