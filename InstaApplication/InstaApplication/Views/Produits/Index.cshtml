@model IEnumerable<InstaApplication.Models.Produits>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Intégration du CSS directement dans la vue -->
    <style>
        /* Général */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f7f6;
            color: #333;
            margin: 0;
            padding: 0;
        }

        /* Titre principal */
        h1 {
            text-align: center;
            color: #2c3e50;
            font-size: 2.5rem;
            margin-top: 30px;
            font-weight: bold;
        }

        /* Tableau */
        .table {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-collapse: collapse;
        }

        thead {
            background-color: #3498db;
            color: white;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        /* Liens dans la table */
        a {
            text-decoration: none;
            font-weight: bold;
            padding: 10px;
            border-radius: 5px;
            display: inline-block;
            transition: background-color 0.3s;
        }

        /* Couleurs des boutons */
        .btn-edit {
            background-color: #28a745; /* Vert */
            color: white;
        }

        .btn-details {
            background-color: #3498db; /* Bleu */
            color: white;
        }

        .btn-delete {
            background-color: #e74c3c; /* Rouge */
            color: white;
        }

        /* Effets au survol des boutons */
        .btn-edit:hover {
            background-color: #218838;
        }

        .btn-details:hover {
            background-color: #2980b9;
        }

        .btn-delete:hover {
            background-color: #c0392b;
        }

        /* Positionnement du texte sous le tableau */
        .text-bottom {
            text-align: center;
            font-weight: bold;
            color: #2c3e50;
        }

        /* Bouton Create New - en bas à droite du tableau */
        .create-button {
            text-align: right;
            margin-top: 30px;
        }

            .create-button a {
                background-color: #3498db;
                color: white;
                text-decoration: none;
                font-weight: bold;
                padding: 12px 20px;
                border-radius: 5px;
                transition: background-color 0.3s;
            }

                .create-button a:hover {
                    background-color: #2980b9;
                }
    </style>
</head>
<body>

    <h1>@ViewData["Title"]</h1>

    <!-- Texte sous le tableau, avant la création -->
    <div class="text-bottom">
        Retrouvez ici les détails sur les produits.
    </div>

    <!-- Tableau des produits -->
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>
                        <a class="btn-edit" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a class="btn-details" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a class="btn-delete" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Bouton Create New en bas à droite -->
    <div class="create-button">
        <a asp-action="Create">Create New</a>
    </div>

</body>
</html>
