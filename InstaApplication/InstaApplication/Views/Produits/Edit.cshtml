@model InstaApplication.Models.Produits

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Intégration du CSS directement dans la vue -->
    <style>
        /* Général */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f7f6;
            color: #333;
            margin: 0;
            padding: 0;
        }

        /* Titre principal */
        h1 {
            text-align: center;
            color: #2c3e50;
            font-size: 2.5rem;
            margin-top: 30px;
            font-weight: bold;
        }

        /* Sous-titre */
        h4 {
            text-align: center;
            color: #3498db;
            font-size: 1.5rem;
            margin-bottom: 10px;
            font-weight: 500;
        }

        /* Formulaire */
        .form-container {
            display: flex;
            justify-content: center;
            margin-top: 30px;
        }

        form {
            width: 100%;
            max-width: 500px;
            background-color: #ffffff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: 600;
            color: #34495e;
            display: block;
            margin-bottom: 5px;
        }

        input.form-control {
            width: 100%;
            padding: 10px;
            font-size: 1rem;
            border: 2px solid #ccc;
            border-radius: 5px;
            background-color: #f9f9f9;
            transition: border-color 0.3s;
        }

            input.form-control:focus {
                border-color: #3498db;
                outline: none;
                background-color: #ffffff;
            }

        /* Bouton Save */
        input[type="submit"] {
            background-color: #3498db;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1.1rem;
            transition: background-color 0.3s;
        }

            input[type="submit"]:hover {
                background-color: #2980b9;
            }

        /* Erreurs de validation */
        .text-danger {
            color: #e74c3c;
        }

        /* Liens */
        a {
            color: #3498db;
            text-decoration: none;
            font-weight: bold;
            display: inline-block;
            margin-top: 20px;
            text-align: center;
            transition: color 0.3s;
        }

            a:hover {
                color: #2980b9;
            }

        /* Positionnement du lien Back to List */
        .back-to-list {
            text-align: right;
            margin-top: 20px;
            font-weight: bold;
        }
    </style>
</head>
<body>

    <h1>@ViewData["Title"]</h1>
    <h4>Modifier les informations du produit</h4>

    <div class="form-container">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Nom du produit" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" placeholder="Prix du produit" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <!-- Lien Back to List, positionné en bas à droite -->
    <div class="back-to-list">
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>
